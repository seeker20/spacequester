<?xml version="1.0" encoding="UTF-8"?>

<plugin>
	<head>
		<name>Anemelde und Login Modul</name>
		<version>0.1</version>
		<minversion>0.1</minversion>
		<maxversion>0.1</maxversion>
		<autor>Florian Krauthan</autor>
		<description>Deint zum Regiestrieren auf der Webseite und zum Anmelden.</description>
		<url>http://www.fkrauthan.de</url>
	</head>

	<data>
		<file>
			<src>reg.php</src>
			<target>MODULE</target>
		</file>
		<file>
			<src>regconf.php</src>
			<target>MODULE</target>
		</file>
		<file>
			<src>loginpanel.php</src>
			<target>MODULE</target>
		</file>
		<file>
			<src>loginpanel.php</src>
			<target>SYSTEM_MODULE</target>
		</file>
		<tmpfile>
			<src>gbuch.admin.php</src>
			<target>ADMIN_MODULE</target>
		</tmpfile>
		
		<sql>
			<name>gbuch</name>
			<modus>CREATE</modus>
			<query>`id` int(11) NOT NULL auto_increment, `name` varchar(255) NOT NULL, `email` varchar(255) NOT NULL, `hp` varchar(255) NOT NULL, `text` text NOT NULL, `date` varchar(255) NOT NULL, PRIMARY KEY  (`id`)</query>
		</sql>
	</data>
	
	<tmpadmin>
		<file>gbuch.admin.php</file>
	</tmpadmin>
</plugin>