<?xml version="1.0" encoding="UTF-8"?>

<plugin>
	<head>
		<name>News Modul</name>
		<version>0.1</version>
		<minversion>0.1</minversion>
		<maxversion>0.1</maxversion>
		<autor>Florian Krauthan</autor>
		<description>Das News Modul</description>
		<url>http://www.fkrauthan.de</url>
	</head>

	<data>
		<file>
			<src>news.php</src>
			<target>MODULE</target>
		</file>
		<file>
			<src>news.admin.php</src>
			<target>ADMIN_MODULE</target>
		</file>
		
		<sql>
			<name>news</name>
			<modus>CREATE</modus>
			<query>`id` int(11) NOT NULL auto_increment, `topic` varchar(255) NOT NULL, `text` text NOT NULL, `date` varchar(255) NOT NULL, `autor` varchar(255) NOT NULL, PRIMARY KEY  (`id`)</query>
		</sql>
	</data>
	
	<admin>
		<file>news.admin.php</file>
	</admin>
</plugin>