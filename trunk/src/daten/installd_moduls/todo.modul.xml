<?xml version="1.0" encoding="UTF-8"?>

<plugin>
	<head>
		<name>Todo Modul</name>
		<version>0.1</version>
		<minversion>0.1</minversion>
		<maxversion>0.1</maxversion>
		<autor>Florian Krauthan</autor>
		<description>Das Todo Modul</description>
		<url>http://www.fkrauthan.de</url>
	</head>

	<data>
		<file>
			<src>todo.php</src>
			<target>MODULE</target>
		</file>
		<file>
			<src>todo.admin.php</src>
			<target>ADMIN_MODULE</target>
		</file>
		
		<sql>
			<name>todo</name>
			<modus>CREATE</modus>
			<query>`id` int(11) NOT NULL auto_increment, `todo` varchar(255) NOT NULL, `status` enum('geplannt','bearbeitung','fertig') NOT NULL, PRIMARY KEY  (`id`)</query>
		</sql>
	</data>
	
	<admin>
		<file>todo.admin.php</file>
	</admin>
</plugin>